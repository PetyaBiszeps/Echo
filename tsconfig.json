{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@echo/shared/*": ["packages/shared/src/*"],
      "@echo/server/*": ["packages/server/src/*"],
      "@echo/client/*": ["packages/client/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}